@model Domain.Entities.Post

<section>
    <article>
        
        <div class="container">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <br/>
                    <br/>
                    <h1><b>@Model.Title</b>
                    </h1>
                    <h4>@Model.DateCreated.Date.ToString("D")</h4>
                    <br/>
                    <p>@Model.Text</p>
                </div>
                <div class="col-sm-1"></div>
            </div>

        </div>
    </article>
    <a asp-route-id="@Model.Id" asp-action="Delete" asp-controller="BlogPost"class="btn btn-danger">Ta bort</a>
    <a asp-route-id="@Model.Id" asp-action="Edit" asp-controller="BlogPost" class="btn btn-danger">Redigera</a>

    <hr/>

</section>