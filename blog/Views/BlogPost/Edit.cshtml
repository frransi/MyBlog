@model EditPostViewModel

@{
    ViewBag.Title = "Redigera blogginlägg";
}

<!DOCTYPE html>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <br />
                <br />
                <form method="post">
                    <input asp-for="Title" type="text" class="input-lg" placeholder="Bloggtitel" value="@Model.Title" />
                    <input type="hidden" asp-for="Id"/>
                    <br />
                    <br />
                    <textarea asp-for="Content" class="form-control" rows="10" placeholder="Bloggtext">@Model.Content</textarea>
                    <br />
                    <input value="Spara" class="btn btn-success" type="submit" />
                </form>
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>
    <hr />
</section>